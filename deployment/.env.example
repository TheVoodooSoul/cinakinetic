# Production Environment Variables

# Domain Configuration
DOMAIN=yoursite.com
ACME_EMAIL=admin@yoursite.com

# Database Configuration
DATABASE_URL=postgresql://cinema_user:your_password@database:5432/cinema_action_db
DB_USER=cinema_user
DB_PASSWORD=your_secure_password

# RunPod Configuration
RUNPOD_API_KEY=your_runpod_api_key
RUNPOD_ENDPOINT=https://your-pod-id-8188.proxy.runpod.net

# Security
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key

# Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# File Storage (MinIO/S3)
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
S3_BUCKET_NAME=cinema-action-generated

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@yoursite.com
SMTP_PASSWORD=your_email_password

# Analytics (optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
POSTHOG_API_KEY=your_posthog_key

# Feature Flags
ENABLE_LORA_TRAINING=true
ENABLE_VIDEO_GENERATION=true
ENABLE_BATCH_PROCESSING=true
MAX_UPLOAD_SIZE_MB=100

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_GENERATIONS_PER_HOUR=50

# Monitoring
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=INFO